{{#ui-button-primative
  mood=mood
  type=type
  size=_size
  value=value
  outline=_outline
  active=active
  tooltipPlace=tooltipPlace
  tooltipSpacing=tooltipSpacing
  tooltipAuto=tooltipAuto
  tooltipTypeClass=tooltipTypeClass
  tooltipEffectClass=tooltipEffectClass
  style=stylist
  disabled=disabled
  onClick=(action "onClick")
}}
<span class="content {{stack}}">
  {{!-- {{#if tooltip}}
    {{#tooltip-on-parent}}{{tooltip}}{{/tooltip-on-parent}}
  {{/if}} --}}

  {{#if hasBlock}}
    {{yield (hash
      icon=(component 'ui-button-icon' icon=icon size=size iconSpin=iconSpin iconPulse=iconPulse)
      title=(component 'ui-button-title' title=title)
    )}}
  {{else}}

      {{#if icon}}
      <span class="icon">
        {{ui-icon icon=icon spin=iconSpin pulse=iconPulse}}
      </span>
      {{/if}}
      {{#if title}}
      <span class="title">
        {{title}}
      </span>
      {{/if}}

  {{/if}}
  </span>
{{/ui-button-primative}}
